<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>net461;netcoreapp3.1</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="IKVM.Sdk.Maven.Tests" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="IKVM.Sdk" Version="8.2.0-prerelease0895" />
        <PackageReference Include="Microsoft.Build.Tasks.Core" Version="16.11.0" />
    </ItemGroup>

    <Target Name="DownloadMavenArtifacts" BeforeTargets="Build" Condition=" '$(TargetFramework)' == '' ">
        <Exec Command="mvn org.apache.maven.plugins:maven-dependency-plugin:3.3.0:copy -DremoteRepositories=http://repo1.maven.org/maven2/ -Dartifact=org.apache.maven.resolver:maven-resolver-api:1.8.1 -Dtransitive=true -DoutputDirectory=$(IntermediateOutputPath)maven" />
        <Exec Command="mvn org.apache.maven.plugins:maven-dependency-plugin:3.3.0:copy -DremoteRepositories=http://repo1.maven.org/maven2/ -Dartifact=org.apache.maven.resolver:maven-resolver-util:1.8.1 -Dtransitive=true -DoutputDirectory=$(IntermediateOutputPath)maven" />
    </Target>

    <Target Name="GetJavaReferenceFromMaven" BeforeTargets="GetJavaReferenceItemsFromJavaReferences" Condition=" '$(TargetFramework)' != '' ">
        <Message Text="IntermediateOutputPath: $(IntermediateOutputPath)..\maven\*.jar" />
        <ItemGroup>
            <JavaReference Include="$(IntermediateOutputPath)..\maven\**\*.jar">
                
            </JavaReference>
        </ItemGroup>        
    </Target>

</Project>
